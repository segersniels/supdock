{
  "name": "supdock",
  "version": "2.7.6-beta.2",
  "description": "What's Up Doc(ker)?",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsup index.ts --clean --target node12 --minify --keep-names --out-dir dist",
    "build": "pkg dist/index.js --target node16 -o ./bin/supdock",
    "build:ci": "pkg dist/index.js --targets node16-linux-x64,node16-macos-x64,node16-win-x64 --out-path ./bin",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "eslint '**/*.{ts,tsx}' --fix",
    "check:typescript": "tsc --noEmit --skipLibCheck --project .",
    "nuke": "rm -rf node_modules ; yarn install",
    "test": "NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register --recursive --exclude './node_modules/**/*.spec.ts' './**/*.spec.ts' --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/segersniels/supdock.git"
  },
  "keywords": [
    "docker",
    "supdock",
    "visual",
    "interactive",
    "wrapper",
    "cli",
    "compose",
    "docker-compose"
  ],
  "author": "Niels Segers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/segersniels/supdock/issues"
  },
  "homepage": "https://github.com/segersniels/supdock#readme",
  "bin": {
    "supdock": "dist/index.js"
  },
  "devDependencies": {
    "@aiteq/trace": "^1.0.0",
    "@types/chai": "^4.2.9",
    "@types/configstore": "^5.0.1",
    "@types/fuzzy-search": "^2.1.2",
    "@types/lodash.flatten": "^4.4.6",
    "@types/mocha": "^7.0.1",
    "@types/node": "^17.0.24",
    "@types/prompts": "^2.0.14",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "chai": "^4.2.0",
    "chalk": "4",
    "configstore": "5",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fuzzy-search": "^3.0.2",
    "lodash.flatten": "^4.4.0",
    "minimist": "^1.2.6",
    "mocha": "^7.1.0",
    "pkg": "^5.6.0",
    "prettier": "^1.19.1",
    "prompts": "^2.4.2",
    "ts-custom-error": "^3.2.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "tsup": "^5.12.8",
    "typescript": "^4.6.3",
    "which": "^2.0.2"
  }
}
